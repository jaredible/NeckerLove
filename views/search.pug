doctype html
html(lang='en', dir='ltr')
  head
    include partials/head.pug
    link(rel='stylesheet', href='/css/search.css')
  body(class='text-center')
    div(class='cover-container d-flex h-100 p-3 mx-auto flex-column' style='width: 100%;')
      header(class='masthead')
        div(class='inner')
          h3(class='masthead-brand mb-3')
            a(href='/', class='masthome')
              i(class='fas fa-heart font-weight-light')
              |  NeckerLove
          nav(class='nav nav-masthead justify-content-center')
            a(href='/', class='nav-link active') Home
            a(href='/account/profile', class='nav-link') Profile
            form(action='/account/logout', method='post')
              input(type='submit', class='btn btn-outline-secondary link-login ml-3', value='Log out')

      main(role='main', class='inner cover')
        form(id='form-search', class='form-search', action='/', method='post', style='width: 100%; max-width: 330px; margin: auto; display: block; display: none;', novalidate)
          div(class='btn-group btn-group-toggle pt-5 pb-1', data-toggle='buttons')
            label(class='btn btn-primary active')
              input(type='radio', name='option', id='optionInterests', value='interests', autocomplete='off', checked)
              |  Interests
            label(class='btn btn-primary')
              input(type='radio', name='option', id='optionState', value='state', autocomplete='off')
              |  State
          div(class='input-group mt-1')
            input(type='text', name='searchQuery', id='searchQuery', class='form-control', placeholder='', autofocus)
            div(class='input-group-append')
              input(type='submit', id='btn-search', class='btn btn-outline-secondary', value='Search')
          div(id='search-error')
        div(id='profiles-wrapper', class='row mt-5')
    
      footer(class='mastfoot mt-auto')
        div(class='inner mt-3')
          p
            | Designed with no sleep by 
            a(href='http://jareddiehl.me') Jaredible

    include partials/scripts.pug
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.lazy/1.7.10/jquery.lazy.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.lazy/1.7.10/jquery.lazy.plugins.min.js')
    script(src='/js/search.js')
