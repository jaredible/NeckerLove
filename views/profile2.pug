doctype html
html(lang='en', dir='ltr')
  head
    include partials/head.pug
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-fileinput@5.0.1/css/fileinput.min.css')
    link(rel='stylesheet', href='/css/profile.css')
  body(class='text-center')
    div(class='cover-container d-flex h-100 p-3 mx-auto flex-column', style='width: 100%;')
      header(class='masthead')
        div(class='inner')
          h3(class='masthead-brand mb-3')
            a(href='/', class='masthome')
              i(class='fas fa-heart font-weight-light')
              |  NeckerLove
          nav(class='nav nav-masthead justify-content-center')
            a(class='nav-link', href='/') Home
            a(class='nav-link active', href='/account/profile') Profile
            form(action='/account/logout', method='post')
              button(type='submit', class='btn btn-outline-secondary link-login ml-3') Log out

      main(role='main', class='inner cover')
        form(id='form-profile', class='form-profile', action='/account/imageupload', enctype='multipart/form-data', method='post', novalidate, style='width: 100%; max-width: 330px; margin: auto;')
          div(class='form-group mt-5 mb-3')
            div(class='round p-1')
              input(type='file', name='inputImage', id='inputImage', class='', accept='image/*')
            div(class='text-white')
              small Select file &lt; 1 MB
          div(class='form-group')
            input(type='text', name='inputFirstName', id='inputFirstName', class='form-control', value=firstName, placeholder='First name')
          div(class='form-group')
            input(type='text', name='inputLastName', id='inputLastName', class='form-control', value=lastName, placeholder='Last name')
          div(class='form-group')
            input(type='text', name='inputInterests', id='inputInterests', class='form-control', value=interests, placeholder='Interests')
          div(class='form-group')
            select(name='inputState', id='inputState', class='custom-select')
              option(value='') --- Select one ---
              if states
                each state in states
                  if state.abbreviation === stateCode
                    option(value=state.abbreviation, selected) #{state.name}
                  else
                    option(value=state.abbreviation) #{state.name}
          button(type='submit', class='btn btn-lg btn-primary btn-block text-white') Save
    
      footer(class='mastfoot mt-auto')
        div(class='inner mt-3')
          p
            | Designed with no sleep by 
            a(href='http://jareddiehl.me') Jared Diehl

    include partials/scripts.pug
    script(src='https://cdn.jsdelivr.net/npm/bootstrap-fileinput@5.0.1/js/plugins/piexif.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap-fileinput@5.0.1/js/plugins/sortable.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap-fileinput@5.0.1/js/plugins/purify.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap-fileinput@5.0.1/js/fileinput.min.js')
    script(src='/js/profile.js')
