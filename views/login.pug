extends layouts/validate.pug

block head
  link(rel='stylesheet', href='/css/login.css')

block content
  form(id='form-login', class='form-login', action='/account/login', method='post', novalidate)
    a(href='/')
      img(class='mb-4', width='72', height='72', src='/img/brand.png', alt='brand')
    h1(class='h3 mb-3 font-weight-light text-white') Please log in
    div(class='form-group')
      input(type='email', name='inputEmail', id='inputEmail', class='form-control', placeholder='Email', value=email, autofocus)
    div(class='form-group')
      input(type='password', name='inputPassword', id='inputPassword', class='form-control', placeholder='Password')
    button(type='submit', class='btn btn-lg btn-primary btn-block text-white') Log in
    p(class='mt-2 mb-2 text-white')
      | Not registered? 
      a(href='/account/register', class='text-primary') Create an account

block scripts
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js')
  script(src='/js/login.js')
