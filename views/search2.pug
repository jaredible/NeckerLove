doctype html
html(lang='en', dir='ltr')
  head
    include partials/head.pug
    link(rel='stylesheet', href='/css/search.css')
  body(class='text-center')
    div(class='cover-container d-flex h-100 p-3 mx-auto flex-column')
      header(class='masthead')
        div(class='inner')
          h3(class='masthead-brand mb-3')
            a(href='/', class='masthome')
              i(class='fas fa-heart font-weight-light')
              |  NeckerLove
          nav(class='nav nav-masthead justify-content-center')
            a(class='nav-link active', href='/') Home
            a(class='nav-link', href='/account/profile') Profile
            form(action='/account/logout', method='post')
              button(type='submit', class='btn btn-outline-secondary link-login ml-3') Log out

      main(role='main', class='inner cover')
        form(id='form-search', class='form-search', style='width: 100%; max-width: 330px; margin: auto;')
          div(class='btn-group btn-group-toggle pt-5 pb-1', data-toggle='buttons')
            label(class='btn btn-secondary active')
              input(type='radio', name='options', id='option1', autocomplete='off', checked)
              |  Interests
            label(class='btn btn-secondary')
              input(type='radio', name='options', id='option2', autocomplete='off')
              |  State
          div(class='input-group mb-3 mt-1 mb-5')
            input(type='text', id='text-search', class='form-control', placeholder='')
            div(class='input-group-append')
              button(type='button', id='btn-search', class='btn btn-outline-secondary') Search
        if matches
          div(class='row')
            each match in matches
              div(class='col-xs-12 col-sm-6 col-md-4 mt-3 mb-2')
                div(class='card rounded')
                  div(Class='card-body text-center p-0')
                    img(class='card-img', src=match.image, alt='')
                    div(class='card-img-overlay h-100 d-flex flex-column justify-content-end p-1')
                      h4(class='card-text font-weight-light text-white') #{match.name}
                    //- p(class='card-text text-dark') #{match.bio}
                    //- button(class='btn btn-primary btn-sm')
                      i(class='fa fa-check')
    
      //- footer(class='mastfoot mt-auto')
        div(class='inner mt-3')
          p
            | Designed with 
            i(class='fas fa-exclamation')
            | &nbsp;
            i(class='fas fa-bed')
            |  by 
            a(href='http://jareddiehl.me') Jared Diehl

    include partials/scripts.pug
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.lazyload/1.9.1/jquery.lazyload.min.js')
    script(src='/js/search.js')
